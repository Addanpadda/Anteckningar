<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNoteActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:ems="10"
            android:id="@+id/note"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"/>

    <EditText
            android:inputType="text"
            android:layout_height="60dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/note"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:id="@+id/noteName"
            app:layout_constraintStart_toEndOf="@+id/noteNameText" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_width="0dp"/>

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/discardButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:drawable/ic_delete"
            android:onClick="exit"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="123dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="123dp"
            app:layout_constraintEnd_toStartOf="@+id/applyButton" android:layout_marginEnd="200dp"
            android:layout_marginRight="200dp"/>

    <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/applyButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@android:drawable/checkbox_on_background"
            android:onClick="createNote"
            android:layout_marginEnd="123dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="123dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/discardButton"
    />
    <TextView
            android:text="@string/note_name_message"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/noteNameText" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/note" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>